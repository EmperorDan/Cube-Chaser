		<canvas id="Projectone" class="GameViewPort" width="500" height="500">
		</canvas>
		<script>
	var canvas = document.getElementById('Projectone');
	var ctx = canvas.getContext('2d');		

		function rect(x, y, w, h, color="red"){
		ctx.beginPath(x,y,w,h);
		ctx.fillStyle=color;
		ctx.fillRect(x,y,w,h);
		ctx.fill();
		}
			
rect(10, 10, 30,30);
		</script>

		<script type="text/javascript">

		function getMouseCoords(e) {
  			var e = e || window.event;

		}


		var followCursor = (function() {
  		var s = document.createElement('div');
  		s.style.position = 'absolute';
  		s.style.margin = 'width="20" height="20"';
  		s.style.padding = '0px';
  		s.style.border = '20px solid green';
		

  		return {
    			init: function() {
      			document.body.appendChild(s);
    		},

    			run: function(e) {
      			var e = e || window.event;
      			s.style.left  = (e.clientX - 5) + 'px';
      			s.style.top = (e.clientY - 5) + 'px';
      			getMouseCoords(e);
    		}
  		};
		}());

			window.onload = function() {
  			followCursor.init();
  			document.body.onmousemove = followCursor.run;
		}

		var s = document.createElement('div');
  		s.style.position = 'absolute';
  		s.style.margin = 'width="20" height="20"';
  		s.style.padding = '0px';
  		s.style.border = '20px solid green';
		</script>
			
			
    	
	</body>
</html>




</canvas>
